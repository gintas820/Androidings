<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/basicText</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tempStyle" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/basicText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="tempMin" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="tempMax" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#aaaa77</item>
    </style>

    <style name="valData" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/resultText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="boxBackground">
        <item name="android:padding">20dp</item>
        <item name="android:radius">20dp</item>
        <item name="android:color">@color/darkBlue</item>
    </style>

</resources>
